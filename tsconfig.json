{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "allowJs": true,

    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true, // IMPORTANT: Tells TSC not to output JS files; Bun handles execution

    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,

     "noUncheckedIndexedAccess": true,

    "types": ["bun-types"]
  }
}